{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@cspm/core-engine": ["./packages/core-engine/src"],
      "@cspm/providers": ["./packages/providers/src"],
      "@cspm/schemas": ["./packages/schemas/src"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
